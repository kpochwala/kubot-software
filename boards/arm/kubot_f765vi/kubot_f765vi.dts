/dts-v1/;

#include <st/f7/stm32f769Xi.dtsi>
#include <st/f7/stm32f769nihx-pinctrl.dtsi>

/ {
	model = "Kubot minisumo board";
	compatible = "kabot,stm32f765vi-kubot";

	chosen {
		zephyr,console = &cdc_acm_uart0;
		zephyr,shell-uart = &usart3;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,dtcm = &dtcm;
	};

	zephyr,user {
		io-channels = <&adc1 10>, <&adc1 11>, <&adc1 12>, <&adc1 13>;
	};

	leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&gpiod 0 GPIO_ACTIVE_HIGH>;
			label = "User LD1";
		};
		blue_led: led_1 {
			gpios = <&gpiod 1 GPIO_ACTIVE_HIGH>;
			label = "User LD2";
		};

		ir_led: ir_led {
			gpios = <&gpioc 6 GPIO_ACTIVE_HIGH>;
			label = "IR led of KTIR sensors";
		};

		rgb_k_r: rgb_k_r {
			gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
			label = "red cathode";
		};
		rgb_k_g: rgb_k_g {
			gpios = <&gpiob 15 GPIO_ACTIVE_HIGH>;
			label = "red cathode";
		};
		rgb_k_b: rgb_k_b {
			gpios = <&gpiob 9 GPIO_ACTIVE_HIGH>;
			label = "red cathode";
		};

		rgb_en_0: rgb_en_0 {
			gpios = <&gpioa 15 GPIO_ACTIVE_HIGH>;
			label = "enable led DV0";
		};
		rgb_en_1: rgb_en_1 {
			gpios = <&gpiob 3 GPIO_ACTIVE_HIGH>;
			label = "enable led DV1";
		};
		rgb_en_2: rgb_en_2 {
			gpios = <&gpiob 4 GPIO_ACTIVE_HIGH>;
			label = "enable led DV2";
		};
		rgb_en_3: rgb_en_3 {
			gpios = <&gpiob 8 GPIO_ACTIVE_HIGH>;
			label = "enable led DV3";
		};
		rgb_en_4: rgb_en_4 {
			gpios = <&gpioc 7 GPIO_ACTIVE_HIGH>;
			label = "enable led DV4";
		};
		rgb_en_5: rgb_en_5 {
			gpios = <&gpioc 8 GPIO_ACTIVE_HIGH>;
			label = "enable led DV5";
		};
		rgb_en_6: rgb_en_6 {
			gpios = <&gpioc 12 GPIO_ACTIVE_HIGH>;
			label = "enable led DV6";
		};
		rgb_en_7: rgb_en_7 {
			gpios = <&gpiod 15 GPIO_ACTIVE_HIGH>;
			label = "enable led DV7";
		};
		rgb_en_8: rgb_en_8 {
			gpios = <&gpiod 14 GPIO_ACTIVE_HIGH>;
			label = "enable led DV8";
		};
		rgb_en_9: rgb_en_9 {
			gpios = <&gpiod 5 GPIO_ACTIVE_HIGH>;
			label = "enable led DV9";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button_0 {
			label = "User";
			gpios = <&gpiob 1 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led;
		led1 = &blue_led;
		sw0 = &user_button;
	};
};

&adc1 {
	pinctrl-0 = <&adc1_in10_pc0 &adc1_in11_pc1 &adc1_in12_pc2 &adc1_in13_pc3>;
	pinctrl-names = "default";
	status = "okay";
};


&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>; /* STLink 8MHz clock */
	status = "okay";
};



&pll {
	div-m = <4>;
	mul-n = <72>;
	div-p = <2>;
	div-q = <3>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

zephyr_udc0: &usbotg_fs {
	pinctrl-0 = <&usb_otg_fs_dm_pa11 &usb_otg_fs_dp_pa12>;
	pinctrl-names = "default";
	status = "okay";
};

&zephyr_udc0 {
	cdc_acm_uart0: cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "CDC_ACM_0";
	};
};

&timers1 {
	st,prescaler = <10000>;
	status = "okay";

	pwm1: pwm {
		status = "okay";
		pinctrl-0 = <&tim1_ch3_pe13>;
		pinctrl-names = "default";
	};
};

&iwdg {
	status = "okay";
};

&rtc {
	status = "okay";
};

&rng {
	status = "okay";
};

&i2c1 {
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&i2c2 {
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

};

&i2c3 {
	pinctrl-0 = <&i2c3_scl_pa8 &i2c3_sda_pc9>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	// V5
	// vl53l0x@29 {
	// 	compatible = "st,vl53l0x";
	// 	reg = <0x29>;
	// 	label = "VL53L0X";
	// 	// pd3 pd4
	// 	xshut-gpios = <&gpiod 4 GPIO_ACTIVE_HIGH>;
	// };
};

&i2c4 {
	pinctrl-0 = <&i2c4_scl_pd12 &i2c4_sda_pd13>;
	pinctrl-names = "default";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	vl53l0x@29 {
		compatible = "st,vl53l0x";
		reg = <0x29>;
		label = "VL53L0X";
		// pe0 pe1
		xshut-gpios = <&gpioe 1 GPIO_ACTIVE_HIGH>;
	};
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pc10 &usart3_rx_pc11>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};


&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/*
		 * The two sectors 0-1 (32+32 kbytes) are reserved for
		 * the bootloader.
		 */
		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0x00010000>;
			read-only;
		};

		/*
		 * The flash starting at offset 0x10000 and ending at
		 * offset 0x1ffff is reserved for use by the application.
		 * This represents sectors 2-3 (32+32 kbytes)
		 */
		storage_partition: partition@10000 {
			label = "storage";
			reg = <0x00010000 0x00010000>;
		};

		/*
		 * Sector 4 (128 kbytes) unallocated.
		 */

		/*
		 * Allocated 3 (256k x 3) sectors for image-0. Sectors 5-7.
		 */
		slot0_partition: partition@40000 {
			label = "image-0";
			reg = <0x00040000 0x000C0000>;
		};

		/*
		 * Allocated 3 (256k x 3) sectors for image-1. Sectors 8-10.
		 */
		slot1_partition: partition@100000 {
			label = "image-1";
			reg = <0x00100000 0x000C0000>;
		};

		/*
		 * Allocated 1 (256k) sector for image-scratch. Sector 11.
		 */
		scratch_partition: partition@1C0000 {
			label = "image-scratch";
			reg = <0x001C0000 0x00040000>;
		};
	};
};

&backup_sram {
	status = "okay";
};
